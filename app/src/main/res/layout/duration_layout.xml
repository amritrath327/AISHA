<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Time Duration"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_marginTop="15dp"/>
    <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <RadioGroup
            android:id="@+id/duration_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="15dp">

            <RadioButton
                android:id="@+id/rbtn_fifteen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_background"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="15 min"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/rbtn_thirty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_background"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:text="30 min"
                android:textSize="12sp" />
            <RadioButton
                android:id="@+id/rbtn_fortyfive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_background"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"
                android:text="45 min"/>
            <RadioButton
                android:id="@+id/rbtn_sixty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radio_background"
                android:layout_marginLeft="20dp"
                android:button="@null"
                android:gravity="center"
                android:checked="false"
                android:textSize="12sp"
                android:text="60 min"/>
        </RadioGroup>
    <RadioGroup
        android:id="@+id/duration_group2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <RadioButton
            android:id="@+id/rbtn_2hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:text="2 hr"
            android:textSize="12sp"/>
        <RadioButton
            android:id="@+id/rbtn_3hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_background"
            android:layout_marginLeft="20dp"
            android:button="@null"
            android:gravity="center"
            android:checked="false"
            android:text="3 hr"
            android:textSize="12sp" />
        <RadioButton
            android:id="@+id/rbtn_4hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_background"
            android:layout_marginLeft="20dp"
            android:button="@null"
            android:gravity="center"
            android:checked="false"
            android:textSize="12sp"
            android:text="4 hr"/>
        <RadioButton
            android:id="@+id/rbtn_5hr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_background"
            android:layout_marginLeft="20dp"
            android:button="@null"
            android:gravity="center"
            android:checked="false"
            android:textSize="12sp"
            android:text="5 hr"/>
    </RadioGroup>
    <!--</HorizontalScrollView>-->
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="In Minutes..."-->
        <!--android:gravity="center"-->
        <!--android:layout_gravity="center"-->
        <!--android:textSize="15sp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:textColor="@color/colorPrimaryDark"/>-->
    <Button
        android:text="Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/btnRequest"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:theme="@style/MyButton"
        android:layout_marginBottom="15dp"/>
</LinearLayout>